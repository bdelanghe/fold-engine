{
  "tasks": {
    "unfold:server": "deno run -A --lock=deno.lock src/unfold/server.ts",
    "unfold:cli": "deno run -A --lock=deno.lock src/unfold/cli/main.ts",
    "dev": "deno task unfold:server",
    "start": "deno task dev",
    "preview": "deno task dev",
    "dev:watch": "deno task --watch dev",
    "validate": "deno task unfold:cli validate",
    "cache": "deno task unfold:cli cache",
    "build:site": "deno task unfold:cli build:site",
    "build": "deno task unfold:cli build",
    "docs": "deno task unfold:cli docs",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "test": "deno test -A",
    "check": "deno task fmt:check && deno task lint && deno task test && deno task validate",
    "ci": "deno task check",
    "check:emit": "deno run -A src/unfold/tools/watch_status.ts",
    "check:watch": "deno run -A --watch src/unfold/tools/watch_status.ts",
    "clean": "rm -rf .unfold dist _site site/.lume"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.17",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "@std/csv": "jsr:@std/csv@^1.0.6",
    "@std/fs": "jsr:@std/fs@^1.0.22",
    "@std/fs/walk": "jsr:@std/fs@^1.0.22/walk",
    "@std/path": "jsr:@std/path@^1.1.4",
    "ajv": "npm:ajv@^8.17.1",
    "ajv-formats": "npm:ajv-formats@^3.0.1",
    "deno-dom-wasm": "https://deno.land/x/deno_dom/deno-dom-wasm.ts",
    "lume/": "https://deno.land/x/lume@v3.1.4/",
    "lume/plugins/": "https://deno.land/x/lume@v3.1.4/plugins/",
    "zod": "npm:zod@^3.25.76"
  },
  "lint": {
    "exclude": [
      "**/*_test.ts"
    ],
    "rules": {
      "tags": [
        "recommended",
        "jsr",
        "react",
        "fresh",
        "workspace"
      ],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "default-param-last",
        "eqeqeq",
        "explicit-function-return-type",
        "explicit-module-boundary-types",
        "no-await-in-loop",
        "no-boolean-literal-for-arguments",
        "no-console",
        "no-eval",
        "no-inner-declarations",
        "no-non-null-asserted-optional-chain",
        "no-non-null-assertion",
        "no-self-compare",
        "no-sparse-arrays",
        "no-sync-fn-in-async-fn",
        "no-top-level-await",
        "no-undef",
        "no-unsafe-finally",
        "no-unsafe-negation",
        "no-use-before-define",
        "no-throw-literal",
        "prefer-ascii",
        "single-var-declarator"
      ]
    }
  }
}
