{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/schemas/datatypes.schema.json",
  "title": "Schema.org Datatypes",
  "description": "Shared JSON Schema datatype definitions for schema.org-aligned validation",
  "type": "object",
  "definitions": {
    "Boolean": {
      "type": "boolean"
    },
    "Date": {
      "type": "string",
      "format": "date"
    },
    "DateTime": {
      "type": "string",
      "format": "date-time"
    },
    "Number": {
      "type": "number"
    },
    "Float": {
      "type": "number"
    },
    "Integer": {
      "type": "integer"
    },
    "Text": {
      "type": "string"
    },
    "CssSelectorType": {
      "type": "string",
      "minLength": 1
    },
    "PronounceableText": {
      "type": "string",
      "minLength": 1
    },
    "URL": {
      "type": "string",
      "format": "uri"
    },
    "XPathType": {
      "type": "string",
      "minLength": 1
    },
    "Time": {
      "type": "string",
      "pattern": "^\\d{2}:\\d{2}(:\\d{2})?$"
    }
  }
}
