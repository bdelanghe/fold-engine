    "textOrUrlOrNodeRefArray": {
      "oneOf": [
        { "$ref": "#/definitions/textOrUrlOrNodeRef" },
        {
          "type": "array",
          "items": { "$ref": "#/definitions/textOrUrlOrNodeRef" }
