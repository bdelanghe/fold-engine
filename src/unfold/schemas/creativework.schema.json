    "dateModified": {
      "description": "Last modification date",
      "type": "string",
      "format": "date",
      "x-jsonld-term": "schema:dateModified",
      "x-jsonld-datatype": "xsd:date"
    },
    "datePublished": {
      "description": "Publication date",
      "type": "string",
      "format": "date",
      "x-jsonld-term": "schema:datePublished",
      "x-jsonld-datatype": "xsd:date"
    },
    "inLanguage": {
      "description": "Language of the content",
      "type": "string",
      "x-jsonld-term": "schema:inLanguage"
    },
    "isBasedOn": {
      "description": "Works this is based on",
      "x-jsonld-term": "schema:isBasedOn",
      "x-jsonld-container": "@set",
      "$ref": "#/definitions/urlOrNodeRefArray"
    },
    "about": {
      "description": "Topics or things described",
      "x-jsonld-term": "schema:about",
      "x-jsonld-container": "@set",
      "$ref": "#/definitions/urlOrNodeRefArray"
    },
    "mentions": {
      "description": "Mentioned things",
      "type": "array",
      "x-jsonld-term": "schema:mentions",
      "x-jsonld-container": "@set",
      "items": { "$ref": "#/definitions/urlOrNodeRef" }
