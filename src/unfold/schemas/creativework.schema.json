      "format": "uri",
      "x-jsonld-id": true
    },
    "title": {
      "description": "Work title",
      "type": "string",
      "x-jsonld-term": "schema:name",
      "minLength": 1
    },
    "name": {
      "description": "Work name",
      "type": "string",
      "x-jsonld-term": "schema:name",
      "minLength": 1
